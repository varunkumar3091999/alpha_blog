<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: article, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |form| %>

        <%= render "shared/errors", obj: @article %>

        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10 shadow rounded">
            <%= form.text_field :title, class:"form-control", placeholder: "Title of the article"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10 shadow rounded">
            <%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Description of the article"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10 shadow rounded">
          <%= form.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Please select categories(Can be empty)"}, {multiple: true, class: "custom-select shadow roundedl"}) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg"%>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= link_to '[ Cancel and return to Articles Listing ]', articles_path %>
    </div>
  </div>
</div>