<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |form| %>

      <%= render "shared/errors", obj: @user %>

        <div class="form-group row">
          <%= form.label :username, class: "col-2 col-form-label text-light"%>
          <div class="col-10 shadow rounded">
            <%= form.text_field :username, class:"form-control", placeholder: "username"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10 shadow rounded">
            <%= form.text_area :email, class: "form-control", placeholder: "email"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10 shadow rounded">
            <%= form.password_field :password, class: "form-control", placeholder: "password"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit(@user.new_record? ? "Sign up" : "Update profile",  class: "btn btn-outline-light btn-lg")%>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= link_to '[ Cancel and return to Articles Listing ]', articles_path %>
    </div>
  </div>
</div>